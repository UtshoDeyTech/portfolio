# Production Environment Configuration for AWS EC2
# Copy this file to .env.production and update with your actual values

# Backend Configuration
DJANGO_SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_SECRET_KEY_IN_PRODUCTION
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=your-ec2-public-ip,your-domain.com,localhost,127.0.0.1

# Database Configuration
# For production, consider using PostgreSQL instead of SQLite
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# For PostgreSQL (uncomment and configure if using):
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=portfolio_db
# DB_USER=portfolio_user
# DB_PASSWORD=your_db_password
# DB_HOST=localhost
# DB_PORT=5432

# CORS Configuration
# Add your domain and EC2 public IP
CORS_ALLOWED_ORIGINS=http://your-ec2-public-ip,http://your-domain.com,https://your-domain.com

# Backend Server
BACKEND_PORT=8000
BACKEND_HOST=0.0.0.0

# Frontend Configuration
FRONTEND_PORT=4321
FRONTEND_HOST=0.0.0.0

# API URL for Frontend
# PUBLIC_API_URL is used by browser (client-side)
# Replace with your EC2 public IP or domain
PUBLIC_API_URL=http://your-ec2-public-ip:8000
# For production with nginx reverse proxy on port 80/443:
# PUBLIC_API_URL=http://your-domain.com/api
# or for HTTPS:
# PUBLIC_API_URL=https://your-domain.com/api

# SERVER_API_URL is used by Astro server-side rendering
# For Docker deployment, use service name:
SERVER_API_URL=http://backend:8000
# For non-Docker deployment, use localhost:
# SERVER_API_URL=http://localhost:8000

# Environment
NODE_ENV=production

# Security Settings (recommended for production)
# Generate a strong secret key using: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
