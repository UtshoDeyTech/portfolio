# Backend Configuration
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=*

# Database Configuration
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:4321,http://127.0.0.1:4321

# Backend Server
BACKEND_PORT=8000
BACKEND_HOST=0.0.0.0

# Frontend Configuration
FRONTEND_PORT=4321
FRONTEND_HOST=0.0.0.0

# API URL for Frontend
# PUBLIC_API_URL is used by browser (client-side)
PUBLIC_API_URL=http://localhost:8000
# SERVER_API_URL is used by Astro server-side rendering (within Docker network)
SERVER_API_URL=http://backend:8000

# Environment
NODE_ENV=development
